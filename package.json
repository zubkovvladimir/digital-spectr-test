{
  "name": "digital-spectr-test",
  "version": "1.0.0",
  "private": true,
  "description": "Тестовое задание в Digital Spectr",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "browser-sync": "^2.26.14",
    "del": "^6.0.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-csso": "^4.0.1",
    "gulp-less": "4.0.x",
